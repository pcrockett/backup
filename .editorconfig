# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
switch_case_indent = true # see <https://man.archlinux.org/man/extra/shfmt/shfmt.1.en>

[Makefile]
indent_style = tab

[*.cue]
indent_style = tab
